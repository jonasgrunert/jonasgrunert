    transition: background-color var(--pico-transition),color var(--pico-transition),text-decoration var(--pico-transition),box-shadow var(--pico-transition),border-color var(--pico-transition),font-weight var(--pico-transition),-webkit-text-decoration var(--pico-transition)
}
main>aside nav details ul li a:hover {
    border-color: var(--pico-secondary-underline)
}
main>aside nav details ul li a[aria-current] {
    border-color: var(--pico-primary);
    color: var(--pico-primary-hover);
    font-weight: 600
}
main>aside nav details ul li a[aria-current]:hover {
    text-decoration: none
}
.horiontal {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.grid > label {
    margin-bottom: 0;
    display: flex;
    flex-direction: column;
}
.grid > label > textarea {
    flex: 99;
}
.aoc pre {
    border-top: var(--pico-border-width) solid var(--pico-secondary-border)
}
.language {
    width: min-content;
    padding: 0.25rem 1rem;
    border-bottom: var(--pico-outline-width) solid var(--pico-primary-border);
    color: var(--pico-primary);
}
.code-date {
    float: right;
    font-style: italic;
    text-align: right;
}
article > footer {
    display: flex;
    justify-content: space-between;
}
body > footer, .footer {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
img {
    width: 100%;
}
.container.profile picture {
    float: right;
    max-width: 20%;
    min-width: 7rem;
    margin: 2rem;
}
.container.profile img {
    border-radius: 999px;
}
#error article {
    border-color: rgb(155, 35, 24);
    background-color: rgb(155, 35, 24);
    border-radius: 4px;
}
@view-transition {
  navigation: auto;
}
::view-transition-old(root),
::view-transition-new(root) {
  animation-duration: 0.5s;
}
#form {
    view-transition-name: input;
}
::view-transition-old(input),
::view-transition-new(input) {
  height: 100%;
}
{% include "./node_modules/@picocss/pico/css/pico.jade.css" %}
* {
    scrollbar-gutter: stable;
}
pre > code {
    overflow-x: initial;
    padding: 0 !important;
}
pre {
    background: var(--background) !important;
    border-radius: 4px;
}
code {
    background: var(--background) !important;
}
textarea {
    field-sizing: content
}
.space-even > .grid > li {
    justify-self: center;
}
@media (min-width: 1024px){
    .container.has-aside {
        display: grid;
        grid-template-rows: auto 1fr;
        grid-template-columns: 10.5rem 1fr;
        grid-template-areas:
        "menu header"
        "menu content";
        grid-column-gap: var(--pico-grid-column-gap); 
    }
    .container-fluid.has-aside {
        display: flex;
        flex-direction: row;
        column-gap: var(--pico-grid-column-gap);
    }
    .blog {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gird-template-rows: min-content;
        grid-auto-rows: auto;
        grid-column-gap: var(--pico-grid-column-gap);
        flex: 4;
    }
    .container.has-aside aside {
        position: sticky;
        top: 6rem;
    }
}
.blog > :not(.code, aside) {
    grid-column: 1 / 1;
}
.container-fluid.has-aside .code {
    grid-column: 2 / 2;
}
.header {
    grid-area: header;
}
.content {
    grid-area: content;
}
body > header {
    background-color: var(--pico-background-color);
    border-bottom: var(--pico-border-width) solid var(--pico-muted-border-color);
    position: sticky;
    top: 0;
    padding: 2rem;
    padding-block: 0 !important;
    z-index: 1;
}
.has-aside aside nav {
    position: sticky;
    top: 6rem;
}
.container.has-aside aside {
    grid-area: menu;
}
.container-fluid.has-aside aside {
    grid-column: 1 / 1;
    flex: 1;
}
@media (max-width: 1024px){
    aside nav details ul.aoc {
        display: grid;
        grid-template-rows: repeat(5, 1fr);
        grid-template-columns: repeat(5, 1fr);
        grid-auto-flow: column;
    }
    aside nav ul.tags {
        display: flex;
    }
    .container.profile {
        grid-template-columns: 1fr 1fr !important;
    }
}
.calendar {
    display: grid;
    grid-template-rows: repeat(5, 1fr);
    grid-template-columns: repeat(5, 1fr);
    grid-auto-flow: column;
}
.calendar li {
    list-style: none;
    border-left: var(--pico-border-width) solid var(--pico-muted-border-color);
    padding: calc(var(--pico-nav-element-spacing-vertical) * .25) 0;
    margin: 0;
}
.calendar li a {
    padding-left: calc(var(--pico-nav-element-spacing-horizontal) * 1.5);
    text-decoration: none;
}
:where(nav li):before {
    float: left;
    content: "\200b"
}
aside nav details summary:after {
    display: none;
}
main>aside nav details[open]>summary {
    margin-bottom: calc(var(--pico-spacing) * .5)
}
main>aside nav details[open]>summary:not([role]):not(:focus) {
    color: inherit
}
main>aside nav details ul li {
    border-left: var(--pico-border-width) solid var(--pico-muted-border-color)
}
main>aside nav details ul:first-of-type {
    margin: 0;
    padding: 0
}
main>aside nav details ul li {
    margin: 0;
    padding: calc(var(--pico-nav-element-spacing-vertical) * .25) 0;
}
main>aside nav details ul li a {
    margin: 0;
    margin-left: calc(var(--pico-border-width) * -1);
    padding: 0;
    padding-left: calc(var(--pico-nav-element-spacing-horizontal) * 1.5);
    border-left: var(--pico-border-width) solid transparent;
    border-radius: 0;
    font-weight: 400;
